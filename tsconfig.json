{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "bundler", // Ваши настройки модуля "bundler"
    "allowImportingTsExtensions": true, // Ваши настройки модуля
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "types": ["@testing-library/jest-dom"],
    "plugins": [{ "name": "next" }],
  },
  "include": [
    "src",
    ".eslintrc.cjs",
    "vite.config.ts",
    "jest.config.cjs",
    "jest.setup.ts",
    "./dist/types/**/*.ts",
    "./next-env.d.ts"
  ],
  "exclude": ["./node_modules"]
  // "references": [{ "path": "./tsconfig.node.json" }]
}
