{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "Node", // Ваши настройки модуля "bundler"
    "allowImportingTsExtensions": true, // Ваши настройки модуля
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "types": ["@testing-library/jest-dom"]
  },
  "include": ["src", ".eslintrc.cjs", "vite.config.ts", "jest.config.cjs"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
